{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "runtimeArgs": [
                "--enable-precise-memory-info",
                "--disable-infobars",
                "--disable-session-crashed-bubble"
            ],
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}",
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        }
    ]
}